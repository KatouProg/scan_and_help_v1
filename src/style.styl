html,
body
  height 100%
  
body
  display flex
  align-items center
  justify-content center
  font-family "Open Sans", sans-serif
  background-color black 
  color white

div
  display flex
  flex-direction column
  align-items center
  
input
  font-size 1rem
  font-family "Open Sans", sans-serif
  text-align center
  margin-bottom 4rem
  border none
  border-bottom 2px solid white
  padding .5rem
  background-color transparent
  color white
  outline none
  
input::placeholder 
  color white
  
